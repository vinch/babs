@import 'nib'

lightergray = #f7f7f7
lightgray = #eee
gray = #ddd
grayer = #aaa
darkgray = #666
darkergray = #333
blue = #0971CF
lightblue = #85B9E8
yellow = #f7e8bc

*
  margin: 0
  padding: 0
  box-sizing: border-box
  -webkit-font-smoothing: antialiased

html, body
  height: 100%

body
  font-family: "Helvetica", "Arial", sans-serif
  font-size: 62.5%
  color: darkergray
  -webkit-font-smoothing: antialiased
  background: white

header
  background: blue
  position: fixed
  left: 0
  top: 0
  width: 100%
  height: 54px
  z-index: 25
  h1
    font-size: 24px
    line-height: 1em
    text-align: center
    padding: 15px 0
    color: white
#content
  padding-top: 54px
  ul
    li
      width: 100%
      height: 60px
      position: relative
      .content
        height: 60px
        padding: 10px 90px 10px 15px
        border-bottom: 1px solid gray
        cursor: pointer
        &:hover
          background: yellow
        &:last-child
          border-bottom: 0
        h2
          font-size: 18px
          line-height: 22px
          margin-bottom: 2px
          whitespace: nowrap
          text-overflow: ellipsis
          overflow: hidden
        .distance
          font-size: 14px
          line-height: 16px
          color: darkgray
      .availabilities
        position: absolute
        width: 60px
        text-align: right
        right: 15px
        top: 0
        font-size: 18px
        line-height: 60px
        strong
          color: blue